<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="vanunu.deeznuts.ProductActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ProductTitle"
            android:layout_width="350dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Product missing!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="6dp" />

        <ImageView
            android:id="@+id/ProductImage"
            android:layout_width="293dp"
            android:layout_height="236dp"
            android:layout_below="@+id/ProductTitle"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/missingproduct"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView
            android:id="@+id/ProductDescription"
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:layout_below="@+id/ProductPricee"
            android:layout_marginTop="17dp"
            android:layout_toStartOf="@+id/NextB"
            android:text="---"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="285dp" />

        <Button
            android:id="@+id/NextB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ProductImage"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/next"
            android:onClick="onClickNextB"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/PreviousB"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ProductImage"
            android:background="@drawable/prev"
            android:onClick="onClickPreviousB"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="251dp" />

        <TextView
            android:id="@+id/ProductPricee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/NextB"
            android:layout_alignLeft="@+id/ProductDescription"
            android:layout_alignStart="@+id/ProductDescription"
            android:text="Product Missing!"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/PurchaseB"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:background="@drawable/buttonbackground"
            android:onClick="onClickPurchaseB"
            android:text="Purchase"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ProductDescription"
            android:layout_toLeftOf="@+id/ProductPricee"
            android:layout_toStartOf="@+id/ProductPricee"
            android:text="Price: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ProductDescription"
            android:layout_alignBottom="@+id/ProductDescription"
            android:layout_toLeftOf="@+id/ProductDescription"
            android:layout_toStartOf="@+id/ProductDescription"
            android:text="Description: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_below="@+id/ProductDescription"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ProductDescription"
            android:layout_alignStart="@+id/ProductDescription"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="18dp"
            android:text="---"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/whatsappbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onClickWhatsappB"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/whatsapp"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>
