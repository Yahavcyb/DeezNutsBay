<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="vanunu.deeznuts.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Registration Page"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="56dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/signupB"
            android:layout_alignStart="@+id/signupB"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="155dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="122dp"
            android:text="E-Mail:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignRight="@+id/textView9"
            android:layout_below="@+id/editTextEmail"
            android:layout_marginTop="90dp"
            android:text="Name:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="162dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextPassword"
            android:layout_alignBottom="@+id/editTextPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Password:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="162dp" />

        <Button
            android:id="@+id/signupB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:onClick="onClickSignupB"
            android:text="Sign up"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="350dp" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="wrap_content"
            android:maxLength="15"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextFullName"
            android:layout_alignRight="@+id/editTextFullName"
            android:layout_below="@+id/editTextFullName"
            android:maxLength="16"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextCreditCard"
            android:layout_alignStart="@+id/editTextCreditCard"
            android:layout_below="@+id/editTextCreditCard"
            android:ems="10"
            android:maxLength="50"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Group Code:"
            android:textSize="24sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextAddress"
            android:layout_alignEnd="@+id/textView8"
            android:layout_alignRight="@+id/textView8"
            android:text="Address:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextCreditCard"
            android:layout_alignBottom="@+id/editTextCreditCard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Credit Card:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextGroupCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignEnd="@+id/editTextAddress"
            android:layout_alignRight="@+id/editTextAddress"
            android:ems="10"
            android:maxLength="5"
            android:inputType="textCapCharacters" />

    </RelativeLayout>
</LinearLayout>
